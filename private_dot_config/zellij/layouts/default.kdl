layout {
  default_tab_template {
    pane size=1 borderless=true {
      plugin location="zellij:tab-bar"
    }
    children
    pane size=1 borderless=true {
      plugin location="zellij:status-bar"
    }
  }
  tab name="Hogwarts" focus=true {
    pane focus=true {
      cwd "/home/adam/code/hogwarts"
    }
  }
  tab name="Zenu" hide_floating_panes=true {
    pane {
      cwd "/home/adam/code/hogwarts/www/zenu"
      command "hx"
    }
    floating_panes {
      pane {
        cwd "/home/adam/code/hogwarts/www/zenu"
        command "npm"
        args "run" "dev"
      }
    }
  }
  tab name="Zest" {
    pane split_direction="vertical" focus=true {
      pane size="60%" focus=true {
        cwd "/home/adam/code/hogwarts/www/zest"
      }
      pane size="40%" {
        cwd "/home/adam/code/hogwarts"
        command "docker"
        args "logs" "--follow" "hogwarts-zest-1"
      }
    }
  }
  tab name="Claude" {
    pane {
      cwd "/home/adam/code/hogwarts"
    }
  }
}
theme "tokyo-night"
